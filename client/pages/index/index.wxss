/**index.wxss**/
page {
  background: #fff;
  display: flex;
  flex-direction: column; 
  justify-content: flex-start; 
  height: 100%;
  overflow: hidden;
}
.container {
  display: flex;
  flex-direction: row;
  flex: 1;
  width: calc(100vw);
  overflow: hidden;
}
map {
  flex: 1;
  width: 100vw;
  height: 100%;
}
.templates {
  flex-basis: 300rpx;
  display: flex;
  justify-content: center;
  height: 100%;
  width: 300rpx;
  flex-direction: column;
}
.template {
  /* flex-basis: 56rpx; */
  width: 144rpx;
  height: 56rpx;
  margin: 20rpx 58rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(240, 240, 240, .5);
  background: #fbfbfb;
  /* flex: 1; */
  text-align: center;
  text-align-last: justify;
  color: #898b8b;
  font-size: 32rpx;
  line-height: 56rpx;
}
.selected {
  border: 1rpx solid #bdd6fc !important;
  background: #f6fbff!important;
  color: #6fb2f9!important;
}
view {
  text-align-last: center
}
.toolbar {
  height: 112rpx;
  display: flex;
  justify-content: space-around;
  overflow: hidden;
  width: 100vw;
}
.toolbar image {
  height: 52rpx;
  width: 52rpx;
  margin: 30rpx 0;
}
.showPicker map {
  width: calc(100vw - 300rpx);
}