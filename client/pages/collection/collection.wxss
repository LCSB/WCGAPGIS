/* pages/collection/collection.wxss */
page {
    background: #f8f8f8;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 100%;
}
.container {
    display: flex;
    height: 100%;
    flex-direction: column;
}
.form {
    flex: 1;
    width: 100%;
}
.form > view {
    background: #FFFFFF;
    width: calc(100% - 20rpx);
    display: flex;
    justify-content: space-between;
    padding: 10rpx;
    font-size: 36rpx;
    line-height: 60rpx;
}
map {
    flex: 1;
    width: 100%;
}
picker {
    flex: 1;
    /* padding-left: 35rpx; */
}
.picker {
    width: 100%;
}
button {
    height: 62rpx;
    line-height: 60rpx;
    text-align: center;
    background-color: rgba(255, 0, 0, 0);
}
button:after {
    font-size: 50rpx;
    line-height: 120rpx;
    color: #FFFFFF;
    text-align: center;
    border-radius: 10rpx;
    background-color: #1890ff;
}
#addTemplate {
    flex-basis: 120rpx;
    width: 120rpx;
}
#addTemplate:after {
    content: "新建";
}
#submit {
    width: calc(100% - 40rpx);
    margin: 20rpx;
    height: 80rpx;
}
#submit:after {
    content: "提交";
    line-height: 160rpx;
    font-size: 60rpx;
}
input {
  flex: 1;
}